{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gomod",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],
  "prCreation": "immediate",
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "at any time"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpdateOptions": [
        "gomodTidy"
      ]
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "enabled": true
    },
    {
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": false
    }
  ]
}
